<Window x:Class="GameOfLife.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conway's Game of Life" Width="720" Height="860"
        Background="#1e1e1e">
    <DockPanel>
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" HorizontalAlignment="Center" >
            <Button x:Name="PlayPauseBtn" Content="▶︎ Play" Padding="12,6" Margin="4" Click="PlayPauseBtn_Click"/>
            <Button Content="Step" Padding="12,6" Margin="4" Click="Step_Click"/>
            <Button Content="Clear" Padding="12,6" Margin="4" Click="Clear_Click"/>
            <Button Content="Randomize" Padding="12,6" Margin="4" Click="Randomize_Click"/>
            <Button Content="Seed R-pentomino" Padding="12,6" Margin="4" Click="SeedRpentomino_Click"/>
            <TextBlock Text="Speed (ms):" Foreground="White" VerticalAlignment="Center" Margin="16,0,6,0"/>
            <Slider x:Name="SpeedSlider" Minimum="30" Maximum="800" Value="120" Width="160" Margin="4" ValueChanged="SpeedSlider_ValueChanged"/>
            <TextBlock x:Name="GenText" Text="Gen: 0" Foreground="White" VerticalAlignment="Center" Margin="16,0,0,0"/>
        </StackPanel>

        <!-- Board -->
        <Border Margin="12" Padding="8" CornerRadius="10" Background="#252526">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                <UniformGrid x:Name="CellGrid" Rows="20" Columns="20" />
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
